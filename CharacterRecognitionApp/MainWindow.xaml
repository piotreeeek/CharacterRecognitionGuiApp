<Window x:Class="CharacterRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterRecognitionApp"
        mc:Ignorable="d"
        Title="Rozpoznaj literę" Height="500" Width="650">
    <Grid Background="Beige">
        <TabControl>
            <TabItem Header="Z rysunku">
                <local:DrawTabData></local:DrawTabData>
            </TabItem>
            <TabItem Header="Z pliku" >
                <local:ImageTabData></local:ImageTabData>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
